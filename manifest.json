{
    "name": "愛工大AutoLogin",
    "subheadings": "愛工大のサイトを自動ログインします",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "愛工大IDとパスワードを保存し、愛工大のサイトに自動ログインします。",
    "permissions": [
        "activeTab",
         "scripting",
         "storage"
        ],
    "content_scripts": [{
      "matches": [
        "https://cms.aitech.ac.jp/*", 
        "https://lcam.aitech.ac.jp/*",
        "https://aicot.aitech.ac.jp/*",
        "https://gakunin.aitech.ac.jp/*",
        "https://ipecprt.ipec.aitech.ac.jp/login"
    ],
      "js": [
        "content.js",
        "options.js"
      ]
    }],
    "action": {
        "default_title": "index",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }